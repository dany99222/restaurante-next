generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Modelo de categorias 
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String
  products Product[] //Se da a netender qie sera un arreglo de productos
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float
  image      String

  //Se hace referencia a la tabla category
  categoryId Int //Clave foranea de category
  category   Category @relation(fields: [categoryId], references: [id])
}
